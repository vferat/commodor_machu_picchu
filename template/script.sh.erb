#!/bin/bash

cd $HOME
apptainer exec  \
        --fakeroot \
        --bind /srv/beegfs/scratch/users/${USER:0:1}/${USER}:/srv/beegfs/scratch/users/${USER:0:1}/${USER} \
        docker://nipreps/fmriprep:24.1.1 fmriprep \
            <%= context.bids_dir %> \
            <%= context.output_dir %> \
            <%= context.analysis_level %> \
            --participant-label <%= context.participant_label %> \
            --fs-license-file <%= context.fs_license_file %> \

echo "Script ending..."
exit 0