batch_connect:
  template: "basic"
  work_dir: ~/
script:
{%- for widget in application.slurm.widgets %}
  {%- if widget == "accounting_id" %}
  accounting_id: <%= auto_accounts %>
  {%- elif widget == "queue_name" %}
  queue_name: <%= auto_queues %>
  {%- else %}
  {{ item_name }}: <%= {{ item_name }}%>
  {%- endif %}
{%- endfor %}
  native:
{%- if application.slurm.args %}
    {{ application.slurm.args }}
{%- endif %}



