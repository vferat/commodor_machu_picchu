batch_connect:
  template: "basic"
script:
{%- for item_name in application.slurm.items() %}
# Visible
{%- if item_value.visible %}
{%- if item_name == "accounting_id" %}
  accounting_id: <%= auto_accounts %>
{%- elif item_name == "queue_name" %}
  queue_name: <%= auto_queues %>
{%- else %}
 {{ item_name }}: <%= {{ item_name }}%>
{%- endif %}
# Non-visible
{%- else %}
 {{ item_name }}: {{ item_name.value }}
{%- endif %}
{%- endfor %}


